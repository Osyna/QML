# Application
NODE_ENV=development
PORT=3000

# Database Configuration
# Supported values: sqlite, postgres
DB_TYPE=sqlite

# SQLite Configuration (when DB_TYPE=sqlite)
DB_SQLITE_PATH=./database/qml_database.db

# PostgreSQL Configuration (when DB_TYPE=postgres)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=qml_user
DB_PASSWORD=qml_password
DB_DATABASE=qml_db

# Database Options
DB_SYNCHRONIZE=true
DB_LOGGING=false
