# Application Configuration
NODE_ENV=development
PORT=3000
API_PREFIX=api
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:4200

# Database Configuration
DB_TYPE=sqlite
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_DATABASE=./database/qml_database.db
DB_PASSWORD=
DB_SYNCHRONIZE=true
DB_LOGGING=false

# For PostgreSQL (production)
# DB_TYPE=postgres
# DB_HOST=localhost
# DB_PORT=5432
# DB_USERNAME=qml_user
# DB_PASSWORD=your_secure_password
# DB_DATABASE=qml_db
# DB_SYNCHRONIZE=false
# DB_LOGGING=true

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_EXPIRES_IN=1d
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production-min-32-chars
JWT_REFRESH_EXPIRES_IN=7d

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TTL=3600

# AI Configuration
# Provider: 'openai' or 'anthropic'
AI_PROVIDER=openai

# OpenAI Configuration (required if AI_PROVIDER=openai)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic Configuration (required if AI_PROVIDER=anthropic)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-opus-20240229

# AI Service Settings
AI_MAX_RETRIES=3
AI_TIMEOUT=30000
AI_CACHE_TTL=3600
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=2000

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100
